extends ../../layout/_default

block vars
  - var rand = Math.random()
  - var page_id = 5
  - var page = pages.filter(v => v.id === page_id)[0]
  - var description = page.description
  - var page_title = page.title
  - var page_og_image = url + page_prefix + page.path + '/' + page.og_image + '?' + rand || ''

block content
  .view
    .featured-box-component.content-page
      if page.title
        .post-title=page.title
        .post-info
          .post-date=page.date
          .post-views
            div Views:
            iframe.stats(src='https://stats.lacy.ninja/' + page.path + '/stats?output=text' scrolling="no")
      if page.image
        .post-image(style='background-image: url("' + page.image + '?' + rand + '")')
      include:markdown ./index.md
      .post-fin
        img(src='/images/logo.svg')
      img(src='http://stats.lacy.ninja/' + page.path + '/stat.gif')
