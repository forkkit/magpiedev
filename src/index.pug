extends layout/_default

block vars
  - var page_title = description
  - var page_active = 'index'
  - var featured = pages.filter(v => v.id === featured_page)

block content
  .view
    each page in featured
      a.featured-box-component(href=`${page_prefix + page.path}`)
        .title=page.title
        .date=page.date
        .text=page.description
        each tag in page.categories
          .tag=tag
        .image(style='background-image: url("' + page.image + '")')
